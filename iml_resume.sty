%%%% title design
\renewcommand{\maketitle}{%
    \twocolumn[
    \null \vspace{-1.5em}%
    \begin{center}%
        \let\footnote\thanks
        {\LARGE \@title \par}%
        \vskip .5em%
        {\large
        \lineskip .5em%
        \begin{tabular}[t]{c}%
            \@author
        \end{tabular}\par}%
    \end{center}%
    \par\vskip 0em
    ]
}

